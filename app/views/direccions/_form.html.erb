  <td><%= f.select :canton, options_for_select(@cantones.collect { |canton|
  [canton.value.titleize, canton.id] }, 0), {}, { id: 'cantones_select' } %></td>
  <td><%= f.select :distrito, options_for_select(@distritos.collect { |distrito|
  [distrito.value.titleize, distrito.id] }, 0), {}, { id: 'distritos_select' } %></td>
  <td><%= f.text_area :direccion_exacta %></td>
  <td><%= f.submit 'Guardar', class: "btn btn-primary"%></td>
<% end %>
