<%= form_for([@persona, @persona.direccions.build]) do |f| %>
  <% if @persona.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@persona.errors.count, "error") %> prohibited this direccion from being saved:</h2>

      <ul>
      <% @persona.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- <td><%= f.select(:provincia, provincia_for_select()) %></td>
  <td><%= f.select(:canton, canton_for_select("San Jose")) %></td> -->

  <td><%= f.select :provincia, options_for_select(@provincias.collect { |provincia|
